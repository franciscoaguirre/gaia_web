= javascript_pack_tag 'header'

%header#gaia-header.row.no-gutters.justify-content-between.align-items-center.py-2.px-4
  .cart.d-inline-block.d-lg-none.position-relative
    = image_pack_tag 'cart_icon.svg'
    .counter
      0
  = link_to root_path, class: 'logo h1 m-0' do
    %span.text-tertiary G
    %span.text-primary A
    %span.text-cuaternary I
    %span.text-quinary A
  .header-links.d-none.d-lg-block
    = link_to t('our_purpose'), our_purpose_path
    = link_to t('store'), products_path
    = link_to t('contact_us'), contact_us_path
    = link_to t('blog'), '#'
    .cart.d-inline-block.position-relative
      = image_pack_tag 'cart_icon.svg'
      .counter
        0
  %button.hamburger.hamburger--squeeze.px-0.d-lg-none{type: 'button'}
    %span.hamburger-box
      %span.hamburger-inner
#hamburger-menu.position-absolute.d-none.flex-column.align-items-center.pt-5
  = link_to t('our_purpose'), our_purpose_path, class: 'h4'
  = link_to t('store'), products_path, class: 'h4'
  = link_to t('contact_us'), contact_us_path, class: 'h4'
  = link_to t('blog'), '#', class: 'h4'
